<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:padding="4dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Tiêu đề chính -->
    <TextView
        android:id="@+id/tvTitle"
        android:text="Load Balancer Mobile Demo"
        android:textSize="26sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="4dp"/>

    <!-- Các nút thao tác -->
    <Button
        android:id="@+id/btnHello"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="GET /api/hello"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#0074D9"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnSlow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="GET /api/slow"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#0074D9"
        app:layout_constraintTop_toBottomOf="@id/btnHello"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnHealth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="GET /api/health"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#0074D9"
        app:layout_constraintTop_toBottomOf="@id/btnSlow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnConcurrent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Send 10 concurrent /api/hello"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#0074D9"
        app:layout_constraintTop_toBottomOf="@id/btnHealth"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <Button
        android:id="@+id/btnStartPoll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Start Health Poll (3s)"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#0074D9"
        app:layout_constraintTop_toBottomOf="@id/btnConcurrent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnStopPoll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Stop Health Poll"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#0074D9"
        app:layout_constraintTop_toBottomOf="@id/btnStartPoll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <!-- Khu vực hiển thị kết quả -->
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Result will appear here..."
        android:textSize="22sp"
        android:textColor="#000000"
        android:padding="14dp"
        android:background="#FFFFFF"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/btnStopPoll"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
